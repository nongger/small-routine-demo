/* pages/list/areaList.wxss */
.press{
  align-items: center;
  text-align: center;
  padding: 0 2rem;
  margin: 3rem 3rem 1rem;
}
.wiget {
  position: relative;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border: #ddd 1px solid;
}

.container {
  height: 100%;
  display: table;
  align-items: center;
  justify-content: space-between;
  margin-left: 15rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: center;
}

.column {
  width: 4rem;
  display: table-cell;
  font-size: 30rpx;
}

.link-column {
  width: 6rem;
  display: table-cell;
  font-size: 35rpx;
}

.link {
  color: blue;
  display: inline-table;
}